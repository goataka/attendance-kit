{
  "name": "attendance-kit",
  "version": "0.1.0",
  "private": true,
  "description": "勤怠管理キット - Monorepo",
  "workspaces": [
    "apps/*",
    "infrastructure/deploy"
  ],
  "scripts": {
    "setup": "npm ci --workspaces --include-workspace-root",
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "generate": "npm run generate --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "premerge:local": "bash scripts/run-premerge.sh",
    "setenv:integration": "export $(cat .env.integration-test | xargs)"
  },
  "keywords": [
    "monorepo",
    "attendance",
    "management"
  ],
  "author": "goataka",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  }
}
