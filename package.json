{
  "name": "attendance-kit",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.6.2",
  "description": "勤怠管理キット - Monorepo",
  "workspaces": [
    "apps/*",
    "infrastructure/deploy"
  ],
  "scripts": {
    "setup": "npm ci --workspaces --include-workspace-root",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "cucumber-js --config test/e2e/cucumber.js",
    "generate": "turbo run generate",
    "lint": "turbo run lint"
  },
  "keywords": [
    "monorepo",
    "attendance",
    "management"
  ],
  "author": "goataka",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "playwright-bdd": "^8.4.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.7.6"
  }
}
