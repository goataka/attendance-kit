{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "cache": true
    },
    "@attendance-kit/website#build": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": true
    },
    "test:unit": {
      "cache": true
    },
    "test:integration": {
      "cache": false
    },
    "test:e2e": {
      "cache": false
    },
    "lint": {
      "cache": true,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": true
    }
  },
  "globalDependencies": [
    ".env",
    "tsconfig.json"
  ]
}
