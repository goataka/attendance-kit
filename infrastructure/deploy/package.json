{
  "name": "attendance-kit-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for attendance-kit clock table",
  "scripts": {
    "setup": "npm run setup --prefix ../..",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=test/integration --updateSnapshot",
    "test:integration": "jest --testPathPattern=test/integration",
    "cdk": "cdk",
    "deploy:local-all": "npm run cdklocal:bootstrap && npm run cdklocal:deploy-all",
    "deploy:local-db": "npm run cdklocal:bootstrap && npm run cdklocal:deploy-db",
    "cdklocal:bootstrap": "cdklocal bootstrap aws://000000000000/ap-northeast-1 --force && sleep 3",
    "cdklocal:deploy-all": "cdklocal deploy --context stack=environment --context environment=dev --require-approval never",
    "cdklocal:deploy-db": "cdklocal deploy AttendanceKit-test-DynamoDB --context stack=dynamodb --context environment=test --require-approval never --no-previous-parameters",
    "cdklocal:synth": "cdklocal synth --context stack=environment --context environment=dev",
    "cdklocal:destroy": "cdklocal destroy --context stack=environment --context environment=dev --force"
  },
  "keywords": [
    "aws",
    "cdk",
    "infrastructure"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@aws-sdk/client-cloudfront": "^3.972.0",
    "@aws-sdk/client-dynamodb": "^3.972.0",
    "@aws-sdk/client-s3": "^3.972.0",
    "@aws-sdk/lib-dynamodb": "^3.972.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.x",
    "aws-cdk": "^2.x",
    "aws-cdk-local": "^2.x",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.3.0"
  },
  "dependencies": {
    "@cloudcomponents/cdk-dynamodb-seeder": "^2.4.0",
    "aws-cdk-lib": "^2.x",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
