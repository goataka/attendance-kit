{
  "name": "attendance-kit-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for attendance-kit clock table",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:integration": "vitest run --config vitest.config.ts",
    "cdk": "cdk",
    "localstack:start": "docker compose up -d",
    "localstack:stop": "docker compose down",
    "localstack:logs": "docker compose logs -f localstack",
    "localstack:bootstrap": "cdklocal bootstrap aws://000000000000/ap-northeast-1",
    "localstack:deploy": "cdklocal deploy --context stack=environment --context environment=dev --require-approval never",
    "localstack:synth": "cdklocal synth --context stack=environment --context environment=dev",
    "localstack:destroy": "cdklocal destroy --context stack=environment --context environment=dev --force"
  },
  "keywords": [
    "aws",
    "cdk",
    "infrastructure"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.x",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.x",
    "aws-cdk": "^2.x",
    "aws-cdk-local": "^2.x",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.3.0",
    "vitest": "^1.x"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.x",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
